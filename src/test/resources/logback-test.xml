<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date %-5level [%thread] %logger{36} - %message%n</pattern>
        </encoder>
    </appender>

    <root treeLevel="OFF">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.hibernate" treeLevel="INFO"/>
    <!--<logger name="org.hibernate.tool.schema.internal" treeLevel="ERROR"/>-->
    <logger name="org.springframework" treeLevel="INFO" />
    <logger name="pl.exsio" treeLevel="INFO" />

</configuration>